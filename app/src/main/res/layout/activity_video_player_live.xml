<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <androidx.media3.ui.PlayerView
            android:id="@+id/exoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:resize_mode="fill"
            app:use_controller="true"
            app:controller_layout_id="@layout/exo_player_control_view">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/skipBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.5"
                    android:color="#66FF0000"
                    android:textSize="32sp"
                    android:text="@string/skip_ad_remaining_time" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button
                    android:id="@+id/adBreak"
                    android:layout_width="wrap_content"
                    android:layout_height="109dp"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.5"
                    android:color="#66FF0000"
                    android:text="@string/check_for_ad_break"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/showAds"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.5"
                    android:color="#66FF0000"
                    android:textSize="32sp"
                    android:text="@string/show_ads" />

                <Button
                    android:id="@+id/extendSession"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.5"
                    android:color="#66FF0000"
                    android:textSize="32sp"
                    android:text="@string/extend_session" />
                </LinearLayout>

            </LinearLayout>

        </androidx.media3.ui.PlayerView>

</LinearLayout>

